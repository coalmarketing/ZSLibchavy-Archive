{% extends "layouts/base.njk" %}

{% block head %}
    <script defer src="/assets/js/search.js"></script>
{% endblock head %}

{% block body %}
    {% include "sections/landing.njk" %}

    <!-- SIDEBAR + CONTENT -->
    <div class="~py-16/24 ~px-4/8 flex items-start gap-16 bg-white dark:bg-gray-900">
        <div class="container m-auto flex max-xl:flex-col items-start gap-16">
            {% include "sections/sidebar.njk" %}

            <!-- INNER CONTENT -->
            <div class="flex-1 ~space-y-16/24 w-full">
                <!-- EVENT POSTS -->
                <section>
                    <div class="flex flex-col gap-4 lg:gap-8">
                        <!-- HEADING + SEARCH BAR -->
                        <div class="flex max-lg:flex-col lg:justify-between lg:items-end gap-6">
                            <!-- TOPPER + HEADING -->
                            <div class="flex flex-col ~gap-0.5/1.5">
                                <span class="topper text-category" data-category="{{ category }}">{{ contentOne.topper }}</span>
                                <h2 class="~text-2xl/4xl text-gray-950 dark:text-white font-extrabold">{{ contentOne.heading }}</h2>
                            </div>

                            <!-- SEARCH BAR -->
                            <form role="search" method="GET" class="flex gap-1 w-full lg:max-w-[18rem]">
                                <label for="search-input" class="sr-only">Search</label>
                                <input
                                    type="search"
                                    id="search-input"
                                    name="q"
                                    placeholder="Hledat příspěvky"
                                    autocomplete="off"
                                    class="form-input w-full px-4 bg-white dark:bg-gray-950 text-sm text-gray-800 dark:text-gray-200 border-2 border-gray-200 dark:border-gray-800 rounded-full focus:border-gray-950/50 focus:ring-gray-950/25">
                            </form>
                        </div>

                        <div id="posts">
                            {% include "components/posts.njk" %}
                        </div>

                        <!-- NO RESULTS MESSAGE -->
                        <div id="no-results-message">
                            <p class="text-gray-800 dark:text-gray-200">Nebyly nalezeny žádné příspěvky odpovídající vašemu hledání.</p>
                        </div>

                        <!-- PAGINATION CONTAINER -->
                        <div id="pagination-container" class="flex justify-center"></div>
                    </div>
                </section>
            </div>
        </div>
    </div>

{% endblock body %}
<!-- CTA -->
<section class="~pt-16/24 ~pb-24/56 ~px-4/8 bg-white dark:bg-gray-900">
    <div class="container m-auto flex flex-col items-center ~gap-8/10 ~p-8/12 bg-gray-100 dark:bg-gray-950 border-2 border-gray-200 dark:border-gray-800 shadow-md rounded-4xl">
        <!-- HEADING + TEXT -->
        <div class="flex flex-col items-center ~gap-4/5">
            <!-- TOPPER + HEADING -->
            <div class="flex flex-col items-center gap-1.5">
                <span class="topper text-center">{{ cta.topper }}</span>
                <h2 class="~max-w-sm/xl text-center ~text-2xl/5xl text-gray-950 dark:text-white font-extrabold !leading-[1.2]">{{ cta.heading | safe }}</h2>
            </div>

            <p class="~max-w-lg/2xl ~text-sm/lg text-center text-gray-800 dark:text-gray-200">{{ cta.text | safe }}</p>
        </div>

        <!-- CTA -->
        <a href="{{ cta.button.url }}" target="_blank" class="btn btn-lg dark:bg-gray-800">
            <span>{{ cta.button.text }}</span>

            <div>
                <img
                    src="/assets/svgs/arrow_outward_dark.svg"
                    alt="Ikona šipky směřující nahoru"
                    width="20"
                    height="20"
                    loading="lazy"
                    decoding="async"
                    aria-hidden="true"
                    draggable="false">
            </div>
        </a>
    </div>
</section>